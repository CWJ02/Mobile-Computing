<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg">

    <LinearLayout
        android:id="@+id/top"
        android:paddingTop="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/point" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/clock" />
        </LinearLayout>
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/level"
            android:elevation="5dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/title" />
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/setting"
            android:onClick="SettingButton">
        </ImageView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/menu"
        android:visibility="gone"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/top"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">
        <TextView
            android:id="@+id/volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            app:drawableStartCompat="@drawable/volume_off"/>

    </LinearLayout>
    <LinearLayout
        android:padding="40dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_below="@id/top"
        android:layout_above="@id/bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/t1"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="@string/type_the_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/t2"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottom"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/one"
                android:layout_margin="5dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/one"/>
            <TextView
                android:id="@+id/two"
                android:layout_margin="5dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/two"/>
            <TextView
                android:id="@+id/three"
                android:layout_margin="5dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/three"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/four"
                android:layout_margin="5dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/four"/>
            <TextView
                android:id="@+id/five"
                android:layout_margin="5dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/five"/>
            <TextView
                android:id="@+id/six"
                android:layout_margin="5dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/six"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/seven"
                android:layout_margin="5dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/seven"/>
            <TextView
                android:id="@+id/eight"
                android:layout_margin="5dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/eight"/>
            <TextView
                android:id="@+id/nine"
                android:layout_margin="5dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/nine"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>